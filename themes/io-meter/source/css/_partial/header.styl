#header
  font-family font-serif
  background-repeat no-repeat

  @media screen
    height 560px
    padding-top 20px
    background-image url(/img/ballon.png)
    background-position right bottom
  @media (max-width: 960px) 
    height 200px
    margin-top 10px
    background-size 100% auto

  #main-nav
    font-family font-title
    line-height 2.5em
    ul
      list-style none
      li
        float left
        margin-left 30px


  h2
    font-weight 100
    color color-link
