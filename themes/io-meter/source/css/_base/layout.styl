*
  margin 0
  padding 0

body
  background-color color-background
  color color-font
  font-family font-default
  font-size 16px
  text-shadow 0 0 1px transparent

a
  text-decoration none
  color color-link

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

#banner 
  background-color color-banner
  padding-bottom 40px
  margin-bottom -40px

.wrapper
  @media screen
    width: 960px;
    margin: 0 auto;
  @media screen and (max-width: 960px)
    width: 100%;
    margin: 0;

